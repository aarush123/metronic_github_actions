{
  "name": "metronic",
  "version": "0.1.0",
  "author": "Demo",
  "description": "Metronic Desktop Application",
  "main": "public/electron.js",
  "homepage": "/",
  "productName": "Metronic",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "cross-env BROWSER=none PORT=3011 react-scripts start",
    "build": "rimraf dist && rimraf build && react-scripts build",
    "postinstall": "electron-builder install-app-deps",
    "electron:start": "electron .",
    "buildwin": "npm run build && electron-builder build --win --x64",
    "buildmac": "npm run build && electron-builder -m",
    "buildLinux": "npm run build && electron-builder -l",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "rtl": "webpack --config webpack-rtl.config.js",
    "createfolder" : "rimraf dist/.icon-ico dist/builder-debug.yml dist/win-unpacked",
    "macDeleteFiles" : "rimraf dist/.icon-icns dist/mac dist/*.zip dist/builder-debug.yml",
    "linuxDeleteFiles" : "rimraf dist/linux-unpacked"
  },
  "build": {
    "asar": true,
    "extends": null,
    "productName": "Metronic",
    "appId": "com.demo.us",
    "copyright": "Â© 2022 Metronic",
    "files": [
      "./build/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 200,
          "type": "file"
        }
      ]
    },
    "mac": {
      "extendInfo": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "icon": "public/logo-1_mac.png",
      "hardenedRuntime": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo-1.png",
      "verifyUpdateCodeSignature": false,
      "publisherName": "Clouwood"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "public/logo512.png",
      "maintainer": "Aarush <aarush.sharma@clouwood.com>"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@formatjs/intl-pluralrules": "^4.0.28",
    "@formatjs/intl-relativetimeformat": "^9.1.7",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@popperjs/core": "~2.10.1",
    "animate.css": "^4.1.1",
    "apexcharts": "^3.27.1",
    "axios": "^0.21.4",
    "axios-mock-adapter": "^1.19.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.2",
    "chart.js": "^3.3.2",
    "clsx": "^1.1.1",
    "cors": "^2.8.5",
    "del": "^6.0.0",
    "electron-is-dev": "2.0.0",
    "express": "^4.17.1",
    "formik": "^2.2.9",
    "line-awesome": "^1.3.0",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "1.6.2",
    "nouislider": "^15.2.0",
    "object-path": "^0.11.5",
    "path": "^0.12.7",
    "prism-react-renderer": "^1.2.1",
    "prism-themes": "^1.7.0",
    "prismjs": "^1.23.0",
    "qs": "6.10.3",
    "react": "^17.0.2",
    "react-apexcharts": "^1.3.9",
    "react-bootstrap": "^2.1.0",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.2",
    "react-inlinesvg": "^2.3.0",
    "react-intl": "^5.20.4",
    "react-is": "^17.0.2",
    "react-query": "^3.34.12",
    "react-router-dom": "6.2.1",
    "react-scripts": "4.0.3",
    "react-table": "^7.7.0",
    "react-topbar-progress-indicator": "^4.1.0",
    "rtlcss-webpack-plugin": "^4.0.6",
    "sass": "1.32.1",
    "socicon": "^3.0.5",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/bootstrap": "^5.0.16",
    "@types/chart.js": "2.9.32",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/nouislider": "15.0.0",
    "@types/object-path": "0.11.0",
    "@types/prismjs": "1.16.5",
    "@types/qs": "6.9.7",
    "@types/react": "^17.0.0",
    "@types/react-copy-to-clipboard": "5.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-table": "^7.7.9",
    "cross-env": "^7.0.3",
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0",
    "electron-rebuild": "^2.3.5",
    "prettier": "2.5.1",
    "react-query-devtools": "2.6.3",
    "typescript": "^4.1.2",
    "v": "^0.3.0",
    "webpack-cli": "^4.8.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "dist/*"
  ]
}
